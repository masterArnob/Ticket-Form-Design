<script>
    const factoryBuildingData = @json($factoryBuilding);
</script>

<script>
    $(document).ready(function () {
        $('.select2').select2({
            placeholder: "Select an option",
            allowClear: true,
            width: '100%'
        });

        const locationDropdown = $('#locationDropdown');
        const buildingDropdown = $('#buildingDropdown');

        locationDropdown.on('change', function () {
            const selectedFactoryId = $(this).val();
            buildingDropdown.empty().append('<option value="">Select building</option>');

            const selectedFactory = factoryBuildingData.find(f => f.id == selectedFactoryId);
            if (selectedFactory && Array.isArray(selectedFactory.building)) {
                selectedFactory.building.forEach(b => {
                    buildingDropdown.append(new Option(b.name, b.id));
                });
            }
        });
    });
</script>

<!-- HRIS Fetch -->
<script>
    const staffIdInput = document.getElementById('staffIdInput');
    const staffNameInput = document.getElementById('staffNameInput');
    const staffPhoneInput = document.getElementById('staffPhoneInput');
    const staffDesignationInput = document.getElementById('staffDesignationInput');
    const staffEmailInput = document.getElementById('staffEmailInput');
    const staffDepartmentInput = document.getElementById('staffDepartmentInput');
    var loaderOverlay = document.getElementById('loaderOverlay');

    staffIdInput.addEventListener('blur', function () {
        const staffId = staffIdInput.value.trim();
        if (!staffId) return;

        loaderOverlay.style.display = 'flex'; // show loader

        let url = "{{ route('frontend.mis.support.ticket.get.hris.info', ['staff_id' => 'DUMMY']) }}";
        url = url.replace('DUMMY', staffId);

        fetch(url)
            .then(response => {
                if (!response.ok) throw new Error('Network response was not ok');
                return response.json();
            })
            .then(data => {
                staffNameInput.value = data.employee_name ?? '';
                staffPhoneInput.value = data.contactno ?? '';
                staffDesignationInput.value = data.designation ?? '';
                staffEmailInput.value = data.email ?? '';
                staffDepartmentInput.value = data.department ?? '';
            })
            .catch(error => {
                console.error('Error fetching HRIS info:', error);
                staffNameInput.value = '';
                staffPhoneInput.value = '';
                staffDesignationInput.value = '';
                staffEmailInput.value = '';
                staffDepartmentInput.value = '';
                alert('Failed to fetch user info.');
            })
            .finally(() => {
                loaderOverlay.style.display = 'none'; // hide loader
            });
    });


</script>

<!-- File Handling -->
<script>
    const fileInput = document.getElementById('file-upload');
    const fileError = document.getElementById('file-error');
    const fileList = document.getElementById('file-list');
    let selectedFiles = [];

    fileInput.addEventListener('change', function () {
        const files = Array.from(fileInput.files);
        fileError.textContent = '';

        if ((selectedFiles.length + files.length) > 3) {
            fileError.textContent = 'You can upload a maximum of 3 files.';
            return;
        }

        const totalSize = [...selectedFiles, ...files].reduce((sum, file) => sum + file.size, 0);
        const maxSize = 20 * 1024 * 1024;

        if (totalSize > maxSize) {
            fileError.textContent = 'Total file size cannot exceed 20 MB.';
            return;
        }

        selectedFiles = selectedFiles.concat(files);
        renderFileList();
    });

    function renderFileList() {
        fileList.innerHTML = '';
        selectedFiles.forEach((file, index) => {
            const li = document.createElement('li');
            li.className = 'list-group-item d-flex justify-content-between align-items-center';
            li.textContent = `${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`;

            const removeBtn = document.createElement('button');
            removeBtn.type = 'button';
            removeBtn.className = 'btn btn-sm btn-danger ms-2';
            removeBtn.textContent = 'x';
            removeBtn.addEventListener('click', () => {
                selectedFiles.splice(index, 1);
                renderFileList();
            });

            li.appendChild(removeBtn);
            fileList.appendChild(li);
        });

        const dataTransfer = new DataTransfer();
        selectedFiles.forEach(file => dataTransfer.items.add(file));
        fileInput.files = dataTransfer.files;
    }
</script>

<!-- Voice Recording -->
<script>
    let mediaRecorder, audioChunks = [], audioBlob, recordInterval, seconds = 0;

    const recordBtn = document.getElementById('recordBtn');
    const pauseBtn = document.getElementById('pauseBtn');
    const playBtn = document.getElementById('playBtn');
    const audioPlayback = document.getElementById('audioPlayback');
    const recordStatus = document.getElementById('recordStatus');
    const recordTimer = document.getElementById('recordTimer');

    function formatTime(sec) {
        const m = Math.floor(sec / 60).toString().padStart(2, '0');
        const s = (sec % 60).toString().padStart(2, '0');
        return `${m}:${s}`;
    }

    recordBtn.addEventListener('click', async () => {
        if (!mediaRecorder || mediaRecorder.state === "inactive") {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({audio: true});
                mediaRecorder = new MediaRecorder(stream);

                mediaRecorder.ondataavailable = e => audioChunks.push(e.data);

                mediaRecorder.onstop = () => {
                    audioBlob = new Blob(audioChunks, {type: 'audio/webm'});
                    audioChunks = [];
                    const audioUrl = URL.createObjectURL(audioBlob);
                    audioPlayback.src = audioUrl;
                    audioPlayback.style.display = 'block';
                    playBtn.style.display = 'inline-block';
                    pauseBtn.style.display = 'none';
                    clearInterval(recordInterval);
                    seconds = 0;
                    recordTimer.textContent = formatTime(seconds);
                    recordStatus.textContent = 'Idle';
                };

                mediaRecorder.start();
                recordStatus.textContent = 'Recording...';
                recordBtn.textContent = '‚èπ Stop';
                pauseBtn.style.display = 'inline-block';
                playBtn.style.display = 'none';
                recordInterval = setInterval(() => {
                    seconds++;
                    recordTimer.textContent = formatTime(seconds);
                }, 1000);
            } catch (err) {
                alert('Microphone access denied or not supported.');
                console.error(err);
            }
        } else if (mediaRecorder.state === "recording" || mediaRecorder.state === "paused") {
            mediaRecorder.stop();
            recordBtn.textContent = 'üéô Record';
        }
    });

    pauseBtn.addEventListener('click', () => {
        if (mediaRecorder.state === "recording") {
            mediaRecorder.pause();
            pauseBtn.textContent = '‚ñ∂ Resume';
            recordStatus.textContent = 'Paused';
            clearInterval(recordInterval);
        } else if (mediaRecorder.state === "paused") {
            mediaRecorder.resume();
            pauseBtn.textContent = '‚è∏ Pause';
            recordStatus.textContent = 'Recording...';
            recordInterval = setInterval(() => {
                seconds++;
                recordTimer.textContent = formatTime(seconds);
            }, 1000);
        }
    });

    playBtn.addEventListener('click', () => {
        if (audioBlob) {
            audioPlayback.play();
        }
    });
</script>

<!-- Submit -->
<script>
    const form = document.getElementById('supportForm');
    const submitBtn = form.querySelector('button[type="submit"]');
    var loaderOverlay = document.getElementById('loaderOverlay');

    form.addEventListener('submit', async function (e) {
        e.preventDefault();

        const staffId = document.getElementById('staffIdInput')?.value.trim();
        const staffName = document.getElementById('staffNameInput')?.value.trim();
        const staffPhone = document.getElementById('staffPhoneInput')?.value.trim();
        const staffDesignation = document.getElementById('staffDesignationInput')?.value.trim();
        const staffEmail = document.getElementById('staffEmailInput')?.value.trim();
        const location = document.getElementById('locationDropdown')?.value;
        const building = document.getElementById('buildingDropdown')?.value;
        const issueTypeSelect = document.getElementById('issueType');
        const issueType = issueTypeSelect ? Array.from(issueTypeSelect.selectedOptions).map(o => o.value) : [];
        const details = document.getElementById('issueDetails')?.value.trim();
        const staffDepartment = document.getElementById('staffDepartmentInput')?.value.trim();
        const deviceNumber=document.getElementById('deviceNumber')?.value.trim();


        if (!staffId || !staffName || !staffPhone || !location || !building || issueType.length === 0 || !details) {
            alert('Please fill all required fields!');
            return;
        }

        const formData = new FormData();
        formData.append('staff_id', staffId);
        formData.append('staff_name', staffName);
        formData.append('staff_phone', staffPhone);
        formData.append('staff_designation', staffDesignation);
        formData.append('staff_email', staffEmail);
        formData.append('location_id', location);
        formData.append('building_id', building);
        formData.append('issue_type', issueType.join(','));
        formData.append('details', details);
        formData.append('staff_department', staffDepartment);
        formData.append('device_number',deviceNumber);


        const files = document.getElementById('file-upload')?.files;
        if (files) {
            for (let i = 0; i < files.length; i++) {
                formData.append('attachments[]', files[i]);
            }
        }

        if (typeof audioBlob !== 'undefined' && audioBlob) {
            formData.append('voice', audioBlob, 'voice_message.webm');
        }

        loaderOverlay.style.display = 'flex';
        submitBtn.disabled = true;

        try {
            const response = await fetch("{{ route('frontend.mis.support.ticket.store') }}", {
                method: 'POST',
                headers: {
                    'X-CSRF-TOKEN': '{{ csrf_token() }}'
                },
                body: formData
            });

            loaderOverlay.style.display = 'none';
            submitBtn.disabled = false;

            if (response.ok) {
                const successModal = new bootstrap.Modal(document.getElementById('successModal'));
                successModal.show();
                form.reset();
                document.getElementById('file-list').innerHTML = '';
                audioPlayback.style.display = 'none';

            } else {
                const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                errorModal.show();
            }
        } catch (error) {
            loaderOverlay.style.display = 'none';
            submitBtn.disabled = false;
            console.error(error);
            const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
            errorModal.show();
            $('.select2').val(null).trigger('change');

        }
    });

    function locationLoad(){
        location.reload();
    }

</script>
<!-- Device Number Validation -->
<script>
    document.getElementById('deviceNumber').addEventListener('blur', function() {
        const deviceNumber = this.value.trim();
        const statusEl = document.getElementById('deviceStatus');
        const submitBtn = document.querySelector('button[type="submit"]');

        if (!deviceNumber) {
            statusEl.innerHTML = '';
            if (submitBtn) submitBtn.disabled = true;
            return;
        }

        statusEl.innerHTML = '<span class="text-muted">Checking...</span>';
        if (submitBtn) submitBtn.disabled = true;

        fetch("{{ route('frontend.mis.support.ticket.validate.pdf.code') }}", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
                "X-CSRF-TOKEN": "{{ csrf_token() }}"
            },
            body: JSON.stringify({ device_number: deviceNumber })
        })
            .then(res => res.json())
            .then(data => {
                if (data.status === true) {
                    // ‚úÖ Device valid
                    statusEl.innerHTML = '<span class="text-success">&#10003; Device number is valid.</span>';
                    if (submitBtn) submitBtn.disabled = false;
                } else {
                    // ‚ùå Device invalid
                    statusEl.innerHTML = '<span class="text-danger">&#10007; ' + (data.message || 'Invalid device number.') + '</span>';
                    if (submitBtn) submitBtn.disabled = true;
                }
            })
            .catch(err => {
                console.error(err);
                statusEl.innerHTML = '<span class="text-danger">&#10007; Error checking device number.</span>';
                if (submitBtn) submitBtn.disabled = true;
            });
    });
</script>

</body>
</html>
