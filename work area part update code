work area script blade code
<script>
    async function fetchWorkAreaReport(btnClick) {
        let url = "{{ route('admin.agent.hr.management.work.area.report', ':location_id') }}";
        let locationId = document.getElementById("location-statistics").value;
        url = url.replace(":location_id", locationId);

        if (btnClick) {
            showLoader();
        }

        fetch(url)
            .then(response => response.json())
            .then(response => {
                if (response.status == "success") {
                    const accordionArea = document.querySelector("#accordionArea");
                    accordionArea.innerHTML = '';

                    const data = response.data;
                    let html = "";

                    for (let index in data) {
                        let value = data[index];
                        let total = 0;
                        let totalMale = 0;
                        let totalFemale = 0;
                        let workAreaId = value[0] ? value[0].workAreaId : null;

                        html += `
                    <div class="accordion" id="accordionParent-${index}">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <button class="btn" style="color: #007bff" data-toggle="collapse" data-target="#collaps-${index}" aria-expanded="false" aria-controls="collaps-${index}">
                                        <i class="fas fa-angle-down"></i> ${index}
                                    </button>

                                    <form action="{{ route('admin.hr-module.agent-hr-management.export') }}" style="display: contents" method="POST" class="download-form">
                                        @csrf
                                        <input type="hidden" name="search_job_status_id" value="1">
                                        <input type="hidden" name="search_work_area_id" value="${workAreaId}">
                                        <input type="hidden" name="search_location_id" value="${locationId}">
                                        <button type="submit" class="download-btn">
                                            <i class="fas fa-download"></i>
                                        </button>
                                    </form>
                                </h5>
                            </div>`;

                        value.sort((a, b) => a.name.localeCompare(b.name));

                        for (let index2 in value) {
                            let buData = value[index2];

                            html += `
                        <div id="collaps-${index}" class="collapse" data-parent="#accordionParent-${index}">
                            <div class="accordion" id="accordiionParent-${index}-${index2}">
                                <div class="card">
                                    <div class="card-header" style="background: #ffffff" id="headingBU1">
                                        <h5 class="mb-0">
                                            <button
                                                class="btn open-bu-modal"
                                                style="color: #304830"
                                                data-bu='${JSON.stringify(buData)}'
                                                aria-expanded="false">
                                              ${buData.name} | Total: ${parseInt(buData.male) + parseInt(buData.female)} | Male: ${buData.male} | Female: ${buData.female}
                                            </button>
                                        </h5>
                                    </div>

                                    <div id="collaps-bu-${index}-${index2}" class="collapse" aria-labelledby="headingBU1" data-parent="#accordiionParent-${index}-${index2}">
                                        <div class="card-body">
                                            <div class="col-md-12">
                                                <table class="table">
                                                    <thead>
                                                        <th>Name</th>
                                                        <th>StaffId</th>
                                                        <th>Gender</th>
                                                    </thead>`;

                            for (let index3 in buData.users) {
                                let user = buData.users[index3];

                                if (user.gender === "Male") totalMale++;
                                if (user.gender === "Female") totalFemale++;
                                if (user.gender) total++;

                                html += `<tbody>
                                        <th>${user.name}</th>
                                        <th>${user.staff_id}</th>
                                        <th>${user.gender}</th>
                                    </tbody>`;
                            }

                            html += `
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>`;
                        }

                        html += `
                        <div class="card-footer">
                            <p class="mb-0">
                                Total: <span>${total}</span> |
                                Male: <span>${totalMale}</span> |
                                Female: <span>${totalFemale}</span>
                            </p>
                        </div>
                    </div>
                    </div>`;
                    }

                    accordionArea.innerHTML = html;
                }

                if (btnClick) hideLoader();
            })
            .catch(response => {
                if (btnClick) hideLoader();
            });
    }


    /* ------------------------------
       OPEN MODAL DOWNLOAD FORM
    ------------------------------ */
    document.addEventListener('click', function(e) {
        if (e.target.closest('.open-bu-modal')) {

            const btn = e.target.closest('.open-bu-modal');
            const buData = JSON.parse(btn.getAttribute('data-bu'));

            const workTableBody = document.getElementById('workTableBody');
            workTableBody.innerHTML = '';

            if (buData.users && buData.users.length > 0) {
                buData.users.forEach(user => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${user.name || ''}</td>
                        <td>${user.staff_id || ''}</td>
                        <td>${user.gender || ''}</td>
                    `;
                    workTableBody.appendChild(tr);
                });
            }

            // FILL MODAL DOWNLOAD HIDDEN FIELDS
            document.getElementById("modal_work_area").value = buData.workAreaId ?? '';
            document.getElementById("modal_business_unit").value = buData.businessUnitId ?? '';
            document.getElementById("modal_location").value =
                document.getElementById("location-statistics").value;

            $('#productModal').modal('show');
        }
    });


    // Toggle icon
    document.addEventListener("click", function (e) {
        const btn = e.target.closest('button[data-toggle="collapse"]');
        if (!btn) return;

        const icon = btn.querySelector("i");
        if (!icon) return;

        if (icon.classList.contains("fa-angle-down")) {
            icon.classList.replace("fa-angle-down", "fa-angle-up");
        } else if (icon.classList.contains("fa-angle-up")) {
            icon.classList.replace("fa-angle-up", "fa-angle-down");
        }
    });


    // Dynamic modal search
    document.getElementById("search").addEventListener("keyup", function () {
        let keyword = this.value.toLowerCase().trim();
        let rows = document.querySelectorAll("#workTableBody tr");

        rows.forEach(row => {
            let name = row.children[0].textContent.toLowerCase();
            let staffId = row.children[1].textContent.toLowerCase();
            let gender = row.children[2].textContent.toLowerCase();

            if (name.includes(keyword) ||
                staffId.includes(keyword) ||
                gender.includes(keyword)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    });
</script>
